<!DOCTYPE html>
<html>
<head>
  <title>Add Blog</title>
  <style>
    /* Navigation bar */
    .navbar {
      background-color: #333;
      overflow: hidden;
    }

    .navbar a {
      float: left;
      color: white;
      text-align: center;
      padding: 14px 20px;
      text-decoration: none;
      font-size: 17px;
    }

    .navbar a:hover {
      background-color: #ddd;
      color: black;
    }

    /* Form styling */
    form {
      max-width: 800px;
      margin: 20px auto;
      padding: 20px;
      background-color: #ffffff;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(128, 118, 118, 0.3);
    }

    form label {
      display: block;
      font-weight: bold;
      margin-bottom: 10px;
    }

    form input[type="text"],
  form textarea {
    width: 100%;
    padding: 8px;
    margin-bottom: 15px;
    border: none;
    border-bottom: 1px solid #000000;
    border-radius: 0;
    position: relative;
  }
    form input[type="file"] {
      display: none;
    }

    form label[for="image"]::after {
      
      margin-left: 10px;
    }

    form img {
      max-width: 100%;
      height: auto;
      margin-bottom: 10px;
    }

    form input[type="submit"] {
      background-color: #4CAF50;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
    }

    /* Image preview */
    #image-preview {
      display: block;
      max-width: 400px;
      margin-top: 10px;
      width: 100%;
    }
  </style>
</head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <div class="navbar">
    <a href="#"><i class="fa fa-home" style="font-size:36px"></i></a>
    <a href="#">About</a>
    <a href="#">Contact</a>
    <div class="w3-display-topright"><img src="snowtops.jpg" class="w3-circle" alt="Alps"></div>
    
  </div>
  <form action="/createBlog" method="post" enctype="multipart/form-data">
    <label for="image"><i class="fa fa-file-image-o" style="font-size:36px"></i></label>
    <input type="file" id="image" name="image"  onchange="previewImage(event)"  />

    <img id="image-preview"  />

    <label for="heading">Heading:</label>
    <input type="text" id="heading" name="title" />

    <label for="description">Description:</label>
    <textarea id="description" name="description" ></textarea>

    <input type="submit" value="Add Blog" />
  </form>

  <script>
    // Function to display image preview
    function previewImage(event) {
      var reader = new FileReader();
      var image = document.getElementById('image-preview');

      reader.onload = function() {
        if (reader.readyState == 2) {
          image.src = reader.result;
          image.style.display = 'block';
        }
      }

      reader.readAsDataURL(event.target.files[0]);
    }
  </script>
</body>
</html>
